<h1>Todos</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<%= render 'shortform' %>

<% if @todos.any? %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= check_box_tag todo.complete %></td>
        <td><%= link_to todo.title, todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'X', todo, method: :delete, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3>No todos.</h3>
<% end %>